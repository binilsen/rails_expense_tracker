<div>
    <h2 class="fs-1 text-center my-4 text-white text-uppercase fw-light">Edit</h2>
    <div>
        <%=@item.errors%>
        <%=form_with model:@item do |form| %>
        <div class="row justify-content-center">
            <div class="col-sm-6">
               <div class="form-floating">
                    <%=form.text_field :expense_name,class:'form-control'%>
                    <%=form.label :Expense%>
               </div>
            </div>
        </div>
        <div class="row justify-content-center my-2">
            <div class="col-sm-6">
                <div class="form-floating">
                    <%=form.text_field :amount,class:'form-control'%>
                    <%=form.label :Amount%>
                </div>
            </div>
        </div>
        <div class="text-center">
            <%=form.submit value:'Change',class:'btn btn-outline-danger'%>
        </div>
            <%end%>
    </div>
</div>