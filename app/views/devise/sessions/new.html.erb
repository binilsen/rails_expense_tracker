<div class="my-4">
  <h2 class="text-center fs-1 text-white fw-light">Log in</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="row my-2 justify-content-center">
    <div class="col-sm-6">
      <div class="form-floating">
        <%= f.email_field :email, autofocus: true,class:'form-control',placeholder: :email,autocomplete: "email" %>
        <%= f.label :email %><br />
      </div>
    </div>
   </div>
  
    <div class="row justify-content-center">
      <div class="col-sm-6">
        <div class="form-floating">
          <%= f.password_field :password,class:'form-control',placeholder: :password, autocomplete: "current-password" %>
          <%= f.label :password %><br />
        </div>
      </div>
    </div>
  
        <% if devise_mapping.rememberable? %>
          <div class="row justify-content-center ">
            <div class="form-check col-sm-6 d-flex  justify-content-center text-center">
              <%= f.check_box :remember_me,class:'form-check-input text-center mx-2' %>
                <%= f.label :remember_me,class:"text-white form-check-label" %>
            </div>
          </div>
          <% end %>
        <div class="row justify-content-center my-2">
          <div class="col-sm-6 text-center">
            <%= f.submit "Log in" ,class:'btn btn-outline-light' %>
          </div>
        </div>
        <% end %>
  
          <%= render "devise/shared/links" %>

</div>